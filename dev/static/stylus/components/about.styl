.about_wrapper
	background-color: base	
.about
	display flex

	color: #fff;
	padding 70px 0
	
.slide_wrapper
	width 33%
	
.slide
	cursor ew-resize

.about_title
	font-size 24px
	font-weight bold
	margin: 0 0 35px;
	

.about_slider_text
	line-height: 25px;

.slider_arrow
	display flex
	justify-content flex-end
	margin-top 15px

	.icon-l-arr
		fill #fff
		margin-right 15px
		size(30px, 30px)
		cursor pointer
	.icon-r-arr
		fill #fff
		size(30px, 30px)
		cursor pointer


.about_right
	width: 66%;
	margin-left: 8.33333333%;
	font-size 24px
	.prime_button
		margin-right 0

.about_right_line
	margin-bottom: 50px;

.user_photo
	width 100px
	height 100px
	border: 3px solid #fff;
	border-radius: 50%;
	margin-right: 35px;
	max-width: 100px;
	
.line_text
	line-height: 25px;
	font-size 13px
	

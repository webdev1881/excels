
.photo_items
	display flex
	justify-content center	
	flex-wrap wrap
	img
		width 30%
		max-width: 100%
		height 100%
		transition: all 0.5s;
		margin 5px
		&:hover
			cursor pointer


	
.modal_zoom
	display none
	z-index 2
	position: fixed
	left: 0
	top: 0
	width: 100%
	height: 100%
	overflow: auto
	background-color: #484a5de6
	
	

.modal_content
	position: fixed
	cursor pointer
	top: 25%
	border 1px solid base
	z-index 3
	width: 80%
	max-width: 700px
	transform:scale(0)
	transition .5s



.centered_box
	width 100%
	display flex
	justify-content center


